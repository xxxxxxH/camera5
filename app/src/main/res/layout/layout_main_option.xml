<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/optionLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/main_item_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/optionSticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Sticker"
            android:layout_marginEnd="6dp"
            android:src="@drawable/main_item_sticker" />

        <ImageView
            android:id="@+id/optionSlimming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Slimming"
            android:layout_marginEnd="6dp"
            android:src="@drawable/main_item_slimming" />

        <ImageView
            android:id="@+id/optionCartoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Cartoon"
            android:layout_marginEnd="6dp"
            android:src="@drawable/main_item_cartoon" />

        <ImageView
            android:id="@+id/optionPuzzle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Puzzle"
            android:layout_marginEnd="6dp"
            android:src="@drawable/main_item_puzzle" />

        <ImageView
            android:id="@+id/optionAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Age Alter"
            android:src="@drawable/main_item_age" />
    </LinearLayout>

    <ImageView
        android:id="@+id/optionCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/optionLl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/main_item_camera" />
</RelativeLayout>