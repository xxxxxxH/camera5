<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.SlimmingAct">
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <com.shehuan.niv.NiceImageView
            android:id="@+id/slimmingMainIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.lcw.library.stickerview.StickerLayout
            android:id="@+id/sticker"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.comix.overwatch.HiveProgressView
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            app:hive_animDuration="10000"
            app:hive_color="@color/colorAccent"
            app:hive_cornerRadius="20"
            app:hive_maxAlpha="255"
            app:hive_rainbow="true"
            app:hive_shrink="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/option_sli"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/cancel_black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Slimming"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/confirm_black" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC" />

        <TextView
            android:id="@+id/currentProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:text="50"
            android:textColor="#000"
            android:textSize="14sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:textColor="#000"
                android:textSize="14sp" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/end"
                android:layout_toEndOf="@+id/start"
                android:progress="50"
                android:thumb="@mipmap/thumb" />

            <TextView
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="100"
                android:textColor="#000"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/option"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="6"
            android:orientation="horizontal"/>


    </LinearLayout>
    
    <com.sweetcam.app.view.topon.TopOnNativeAdView
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</LinearLayout>