<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.MainActivity">

    <FrameLayout
        android:id="@+id/mainAd"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <ImageView
        android:id="@+id/mainContentIv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainAd"
        android:scaleType="centerCrop"
        android:layout_marginTop="6dp"
        android:src="@drawable/main_content_bg"/>

    <ftp.summer.suncam.view.MainOptionView
        android:id="@+id/mainOptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainContentIv"
        android:layout_marginTop="-120dp" />

</RelativeLayout>